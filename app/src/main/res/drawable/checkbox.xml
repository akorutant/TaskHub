<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/primary" /> <!-- Change this color to your desired color -->
                    <corners android:radius="5dp" /> <!-- Optional: rounded corners -->
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/primary" /> <!-- Optional: border color -->
                    <corners android:radius="5dp" /> <!-- Optional: rounded corners -->
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/full_opacity" /> <!-- Change this color to your desired color -->
                    <corners android:radius="5dp" /> <!-- Optional: rounded corners -->
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/full_opacity" /> <!-- Optional: border color -->
                    <corners android:radius="5dp" /> <!-- Optional: rounded corners -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>